---
import Logo from '../Logo.astro'
import SideMenu from './SideMenu'

const links = [
	{ label: 'Home', path: '#' },
	{ label: 'Products', path: '#' },
	{ label: 'Features', path: '#' },
	{ label: 'Contact', path: '#' },
	{ label: 'Faqs', path: '#' }
]
---

<header
	class="container sticky top-0 z-20 rounded-b-xl border-x border-b border-gray-200 bg-white px-6 py-4 transition-all delay-75 duration-100 ease-in-out"
>
	<nav class="relative flex max-w-7xl items-center justify-between">
		<Logo />

		<ul class="hidden items-center gap-8 lg:flex">
			{
				links.map((link) => (
					<li class="font-medium text-neutral-800 first-letter:uppercase hover:text-violet-600">
						<a href={link.path}>{link.label}</a>
					</li>
				))
			}
		</ul>

		<a
			href="https://github.com/soufianeelc/wrapped"
			class="hidden items-center rounded-full bg-accent px-6 py-2 text-white md:flex"
		>
			<span>Get template</span>
			<svg
				xmlns="http://www.w3.org/2000/svg"
				viewBox="0 0 20 20"
				fill="currentColor"
				class="h-5 w-5"
			>
				<path
					fill-rule="evenodd"
					d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z"
					clip-rule="evenodd"></path>
			</svg>
		</a>

		<SideMenu client:load />
	</nav>
</header>
